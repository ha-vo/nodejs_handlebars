<h1>Edit Page</h1>
<form class="mt-4" method="POST" action="/me/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
        <label for="name" class="form-label">name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <textarea type="text" class="form-control" id="description" name="description">{{course.description}}</textarea>
    </div>
    <div class="mb-3">
        <label for="video" class="form-label">id video</label>
        <input type="text" class="form-control" id="video" name="video" value="{{course.video}}">
    </div>
    <button type="submit" class="btn btn-primary">LÆ°u</button>
</form>