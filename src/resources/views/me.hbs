<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>
                <a href="/me/courses/{{this._id}}/edit"><button>Edit</button></a>
                <a><button>Delete</button></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>